# ===================================================================
# TSA Monorepo - Environment Variables
# ===================================================================
# Single .env file for the entire monorepo
# Both admin and coach frontends read from this file
# üîê Replace placeholder values with your real secrets!

# ===================================================================
# API ENDPOINTS (Production URLs)
# ===================================================================
# Frontend-accessible API endpoints (browser-safe)
NEXT_PUBLIC_TSA_ADMIN_API_URL=https://your-admin-api-id.execute-api.us-east-1.amazonaws.com/prod
NEXT_PUBLIC_TSA_COACH_API_URL=https://your-coach-api-id.execute-api.us-east-1.amazonaws.com/prod
NEXT_PUBLIC_TSA_PARENT_API_URL=https://your-parent-api-id.execute-api.us-east-1.amazonaws.com/prod
NEXT_PUBLIC_TSA_AUTH_API_URL=https://your-auth-api-id.execute-api.us-east-1.amazonaws.com/v1

# ===================================================================
# GOOGLE SERVICES (Production Keys)
# ===================================================================
# Google Maps & Places API (frontend-accessible)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=your-google-places-api-key-here

# Google OAuth (backend only - server-side secrets)
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-oauth-client-secret
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# ===================================================================
# EXTERNAL SERVICES
# ===================================================================
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your-mapbox-access-token-here

# ===================================================================
# APPLICATION CONFIGURATION (Production)
# ===================================================================
# Production environment settings
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_STAGE=prod
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_APP_NAME=TSA Portal
NEXT_PUBLIC_ADMIN_EMAIL=admin@texassportsacademy.com
NEXT_PUBLIC_SHOW_PERFORMANCE_METRICS=false

# ===================================================================
# AWS COGNITO (Production)
# ===================================================================
NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_YourUserPoolId
NEXT_PUBLIC_COGNITO_CLIENT_ID=your-cognito-app-client-id
NEXT_PUBLIC_COGNITO_REGION=us-east-1

# ===================================================================
# BACKEND/LAMBDA ENVIRONMENT VARIABLES (Production)
# ===================================================================
# DynamoDB Tables (production naming)
TSA_PROFILES_TABLE=profiles-v3-prod
TSA_INVITATIONS_TABLE=coach-invitations-v3-prod
TSA_PARENT_INVITATIONS_TABLE=parent-invitations-v3-prod
TSA_EVENTS_TABLE=events-v3-prod
TSA_EVENT_REGISTRATIONS_TABLE=event-registrations-v3-prod
TSA_ENROLLMENTS_TABLE=tsa-parent-enrollments-v3-prod
TSA_AUDIT_LOGS_TABLE=admin-audit-logs-v3-prod
TSA_PARENT_DOCUMENTS_TABLE=tsa-parent-documents-v3-prod

# Email & URLs (production)
TSA_FROM_EMAIL=noreply@texassportsacademy.com
TSA_FRONTEND_URL=https://coach.texassportsacademy.com

# S3 Buckets (production)
TSA_EVENTS_PHOTOS_BUCKET=tsa-events-photos-prod

# Logging (production level)
LOG_LEVEL=WARN

# ===================================================================
# SETUP INSTRUCTIONS (UPDATED)
# ===================================================================
# 1. Copy this file to create your .env file:
#    cp .env.example .env
#
# 2. Replace ALL placeholder values with real API keys and secrets
#
# 3. Get real API URLs automatically:
#    npm run sync:env
#
# 4. Both admin and coach frontends will read from this single .env file
#
# 5. Never commit .env files with real secrets! 