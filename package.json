{
  "name": "tsa-monorepo",
  "version": "1.0.0",
  "description": "Texas Sports Academy - Unified Monorepo",
  "private": true,
  "workspaces": [
    "tsa-coach-frontend",
    "tsa-admin-frontend",
    "tsa-coach-backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:coach\" \"npm run dev:admin\"",
    "dev:coach": "cd tsa-coach-frontend && npm run dev",
    "dev:admin": "cd tsa-admin-frontend && npm run dev",
    "build:all": "npm run build:coach && npm run build:admin",
    "build:coach": "cd tsa-coach-frontend && npm run build",
    "build:admin": "cd tsa-admin-frontend && npm run build",
    "test:all": "npm run test:coach && npm run test:admin",
    "test:coach": "cd tsa-coach-frontend && npm test",
    "test:admin": "cd tsa-admin-frontend && npm test",
    "lint:all": "npm run lint:coach && npm run lint:admin",
    "lint:coach": "cd tsa-coach-frontend && npm run lint",
    "lint:admin": "cd tsa-admin-frontend && npm run lint",
    "deploy:coach": "cd tsa-infrastructure && cdk deploy tsa-coach-backend-dev",
    "deploy:admin": "cd tsa-infrastructure && cdk deploy tsa-admin-backend-dev",
    "deploy:infra": "cd tsa-infrastructure && cdk deploy --all",
    "deploy:dev": "cd tsa-infrastructure && cdk deploy --all",
    "deploy:staging": "cd tsa-infrastructure && cdk deploy --all --context stage=staging",
    "deploy:prod": "cd tsa-infrastructure && cdk deploy --all --context stage=prod",
    "clean": "npm run clean:coach && npm run clean:admin && npm run clean:infra",
    "clean:coach": "cd tsa-coach-frontend && rm -rf .next node_modules",
    "clean:admin": "cd tsa-admin-frontend && rm -rf .next node_modules",
    "clean:infra": "cd tsa-infrastructure && rm -rf cdk.out node_modules",
    "install:all": "npm install && npm run install:services",
    "install:services": "cd tsa-coach-frontend && npm install && cd ../tsa-admin-frontend && npm install && cd ../tsa-coach-backend && npm install",
    "sync:env": "cd tsa-infrastructure/scripts && echo '🔐 Creating local .env files (gitignored)...' && python sync-frontend-urls.py",
    "sync:env:prod": "cd tsa-infrastructure/scripts && echo '🔐 Creating local .env files (gitignored)...' && python sync-frontend-urls.py --stage prod",
    "update:urls": "./tsa-infrastructure/scripts/update-frontend-urls.sh",
    "bootstrap": "npm run install:all && npm run build:all",
    "env:setup": "echo '📋 Setting up environment file...' && cp .env.example .env && echo '✅ Created .env from .env.example' && echo '⚠️  Remember to replace placeholder values with real API keys!'"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.8",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.40.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/tsa-monorepo.git"
  },
  "keywords": [
    "texas-sports-academy",
    "monorepo",
    "react",
    "nextjs",
    "aws",
    "cdk",
    "lambda",
    "education",
    "sports-academy"
  ],
  "license": "MIT"
} 